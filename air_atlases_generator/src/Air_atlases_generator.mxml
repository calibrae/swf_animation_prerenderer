<?xml version="1.0"?>
<mx:WindowedApplication xmlns:mx="http://www.adobe.com/2006/mxml" applicationComplete="onApplicationComplete()"
        width="800" height="600" horizontalAlign="left" frameRate="32">
    <mx:Script><![CDATA[

        private function onApplicationComplete():void {
            _main.setActualSize(800, 600);
            _main.move(0, 0);
            this.addChild(_main);
        }

        private var _main : Main = new Main();
        ]]></mx:Script>

<mx:Label text="Will generate atlas for : {_main.currentAnimationAtlases}" />

</mx:WindowedApplication>
